<?xml version="1.0" encoding="UTF-8"?>
<project name="module_cs555" default="compile.module.cs555">
  <dirname property="module.cs555.basedir" file="${ant.file.module_cs555}"/>
  
  <property name="module.jdk.home.cs555" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cs555" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cs555" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cs555" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="cs555.output.dir" value="${module.cs555.basedir}/out/production/cs555"/>
  <property name="cs555.testoutput.dir" value="${module.cs555.basedir}/out/test/cs555"/>
  
  <path id="cs555.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cs555.module.production.classpath">
    <path refid="${module.jdk.classpath.cs555}"/>
    <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M3.jar"/>
  </path>
  
  <path id="cs555.runtime.production.module.classpath">
    <pathelement location="${cs555.output.dir}"/>
    <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M3.jar"/>
  </path>
  
  <path id="cs555.module.classpath">
    <path refid="${module.jdk.classpath.cs555}"/>
    <pathelement location="${cs555.output.dir}"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M3.jar"/>
    <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M3.jar"/>
  </path>
  
  <path id="cs555.runtime.module.classpath">
    <pathelement location="${cs555.testoutput.dir}"/>
    <pathelement location="${cs555.output.dir}"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M3.jar"/>
    <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/junit-jupiter-api-5.0.0-M6.jar"/>
    <pathelement location="${idea.home}/plugins/junit/lib/opentest4j-1.0.0-M3.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.cs555">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cs555">
    <patternset refid="excluded.from.module.cs555"/>
  </patternset>
  
  <path id="cs555.module.sourcepath">
    <dirset dir="${module.cs555.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="cs555.module.test.sourcepath">
    <dirset dir="${module.cs555.basedir}">
      <include name="test-res"/>
      <include name="test-src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cs555" depends="compile.module.cs555.production,compile.module.cs555.tests" description="Compile module cs555"/>
  
  <target name="compile.module.cs555.production" depends="register.custom.compilers" description="Compile module cs555; production classes">
    <mkdir dir="${cs555.output.dir}"/>
    <javac2 destdir="${cs555.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cs555}/javac">
      <compilerarg line="${compiler.args.cs555}"/>
      <bootclasspath refid="cs555.module.bootclasspath"/>
      <classpath refid="cs555.module.production.classpath"/>
      <src refid="cs555.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cs555"/>
    </javac2>
    
    <copy todir="${cs555.output.dir}">
      <fileset dir="${module.cs555.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cs555.tests" depends="register.custom.compilers,compile.module.cs555.production" description="compile module cs555; test classes" unless="skip.tests">
    <mkdir dir="${cs555.testoutput.dir}"/>
    <javac2 destdir="${cs555.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cs555}/javac">
      <compilerarg line="${compiler.args.cs555}"/>
      <bootclasspath refid="cs555.module.bootclasspath"/>
      <classpath refid="cs555.module.classpath"/>
      <src refid="cs555.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.cs555"/>
    </javac2>
    
    <copy todir="${cs555.testoutput.dir}/cs555/a1/tests">
      <fileset dir="${module.cs555.basedir}/test-res">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
    <copy todir="${cs555.testoutput.dir}">
      <fileset dir="${module.cs555.basedir}/test-src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.cs555" description="cleanup module">
    <delete dir="${cs555.output.dir}"/>
    <delete dir="${cs555.testoutput.dir}"/>
  </target>
</project>